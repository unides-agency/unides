{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Alias `src` to `~`
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    // Additional useful options
    "strict": true,
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  }
}
