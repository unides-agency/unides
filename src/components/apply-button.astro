---
import ApplyModal from './apply-modal.astro';
---

<button
  type="button"
  class="absolute top-4 right-4 z-10 bg-bright-lime text-deep-teal px-6 py-3 rounded-md font-bold text-base hover:bg-lime-muted transition-all focus:ring-2 focus:ring-bright-lime focus:ring-offset-2 apply-button"
  onclick="openApplyModal()"
>
  Apply Now
</button>

<ApplyModal />
<style>
  button {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(10, 53, 58, 0.1);
    letter-spacing: 0.02em;
    border: 1px solid rgba(10, 53, 58, 0.15);
  }
  
  .apply-button {
    position: relative;
    overflow: hidden;
  }
  
  .apply-button::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.3);
    border-radius: inherit;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .apply-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(10, 53, 58, 0.2);
    border-color: rgba(10, 53, 58, 0.25);
  }
  
  .apply-button:hover::after {
    opacity: 1;
    animation: pulse-glow 1.5s infinite;
  }
  
  @keyframes pulse-glow {
    0% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 0.3;
    }
  }
</style>

