---
import { Icon } from "astro-icon/components";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://instagram.com/unidesagency",
    description: "Follow Unides on Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://wa.me/1728027395",
    description: "Contact Unides on WhatsApp",
    icon: "fa-brands:whatsapp",
  },
  {
    url: "https://www.youtube.com/@UnidesAgency",
    description: "Watch Unides on YouTube",
    icon: "fa-brands:youtube",
  },
];
---

<footer class="footer relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900 via-purple-900 to-slate-900"></div>
  </div>
  
  <!-- Logomark in bottom right -->
  <div class="absolute bottom-8 right-8">
    <img src="/unides_agency_orange.png" alt="Unides" class="h-16 w-auto" />
  </div>
  
  <!-- Social links centered -->
  <div class="relative flex flex-col items-center space-y-4 w-full max-w-lg mx-auto px-4">
    <div class="text-center mb-2">
      <h3 class="text-lg font-medium text-white/90 mb-1">Let's connect.</h3>
      <p class="text-sm text-white/80">Follow us and say hi.</p>
    </div>
    <ul class="flex justify-center items-center gap-6 w-full">
      {
        links.map((link) => (
          <li>
            <a
              class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4 hover:scale-110 hover:bg-white/10 transition-all duration-200 ease-in-out"
              href={link.url}
              title={link.description.replace("Follow Unides on ", "").replace("Contact Unides on ", "").replace("Watch Unides on ", "")}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="size-full" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
    
    <!-- Legal links -->
    <div class="flex gap-4 text-xs text-white/60">
      <a href="/impressum" class="hover:text-white/80 transition-colors">Impressum</a>
      <span>•</span>
      <a href="/privacy" class="hover:text-white/80 transition-colors">Privacy Policy</a>
    </div>
    
    <p class="text-sm text-white/70">© {new Date().getFullYear()} Unides. All rights reserved.</p>
  </div>
</footer>
