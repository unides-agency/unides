---
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";

import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://instagram.com/unidesagency",
    description: "Follow Unides on Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://wa.me/1728027395",
    description: "Contact Unides on WhatsApp",
    icon: "fa-brands:whatsapp",
  },
  {
    url: "https://www.youtube.com/@UnidesAgency",
    description: "Watch Unides on YouTube",
    icon: "fa-brands:youtube",
  },
];
---

<footer class="footer relative flex min-h-64 py-8 items-center justify-center overflow-hidden">
  <div class="absolute inset-0 opacity-40">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900 via-purple-900 to-slate-900"></div>
  </div>
  
  <!-- Mobile: Logo at top, Desktop: Logo at bottom right -->
  <div class="absolute top-4 left-4 sm:top-auto sm:left-auto sm:bottom-8 sm:right-8">
    <Image src="/unides_agency_orange.png" alt="Unides" class="h-12 sm:h-16 w-auto" width={200} height={50} />
  </div>
  
  <!-- Main content container -->
  <div class="relative flex flex-col items-center justify-center space-y-6 w-full max-w-lg mx-auto px-4 py-8 sm:py-0">
    <!-- Header text -->
    <div class="text-center">
      <h3 class="text-base sm:text-lg font-medium text-white/90 mb-1">Let's connect.</h3>
      <p class="text-sm text-white/80">Follow us and say hi.</p>
    </div>
    
    <!-- Social links -->
    <ul class="flex justify-center items-center gap-4 sm:gap-6 w-full">
      {
        links.map((link) => (
          <li class="flex-shrink-0">
            <a
              class="flex size-12 sm:size-16 items-center justify-center rounded-full border-2 border-current p-3 sm:p-4 hover:scale-110 hover:bg-white/10 transition-all duration-200 ease-in-out"
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              title={link.description.replace("Follow Unides on ", "").replace("Contact Unides on ", "").replace("Watch Unides on ", "")}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="size-full" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
    
    <!-- Legal links -->
    <div class="flex flex-wrap justify-center items-center gap-2 sm:gap-4 text-xs sm:text-sm text-white/60">
      <a href="/impressum" class="hover:text-white/80 transition-colors whitespace-nowrap">Impressum</a>
      <span class="hidden sm:inline">•</span>
      <a href="/privacy" class="hover:text-white/80 transition-colors whitespace-nowrap">Privacy Policy</a>
    </div>
    
    <!-- Copyright -->
    <p class="text-xs sm:text-sm text-white/70 text-center">
      © {new Date().getFullYear()} Unides. All rights reserved.
    </p>
  </div>
</footer>
