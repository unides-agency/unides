---
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";

import type { FooterLink } from "~/types";

const socialLinks: Array<FooterLink> = [
  {
    url: "https://wa.me/1728027395",
    description: "Contact Unides on WhatsApp",
    icon: "fa-brands:whatsapp",
  },
  {
    url: "https://instagram.com/unidesagency",
    description: "Follow Unides on Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://www.youtube.com/@UnidesAgency",
    description: "Watch Unides on YouTube",
    icon: "fa-brands:youtube",
  },
];

const navLinks = [
  { label: "Talents", href: "#talents" },
  { label: "About us", href: "#aboutus" },
  { label: "Team", href: "#team" },
  { label: "Contact us", href: "#contact" },
];
---

<footer class="footer-section">
  <div class="footer-container">
    <!-- Logo -->
    <div class="footer-logo">
      <Image src="/unides_agency_orange.png" alt="Unides" class="h-16 w-auto" width={250} height={70} />
    </div>

    <!-- Main Content -->
    <div class="footer-content">
      <!-- Left Column: Nav + Social -->
      <div class="footer-left">
        <nav class="footer-nav">
          {navLinks.map(link => (
            <a href={link.href} class="footer-nav-link">{link.label}</a>
          ))}
        </nav>
        
        <div class="footer-social">
          {socialLinks.map(link => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              title={link.description}
              class="footer-social-link"
            >
              <Icon class="size-5" name={link.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Right Column: Subscribe -->
      <div class="footer-right">
        <h3 class="footer-subscribe-title">Subscribe to keep up<br />with the latest news</h3>
        
        <form id="subscribe-form" class="footer-subscribe-form">
          <input 
            type="email" 
            name="email"
            id="subscribe-email"
            placeholder="Enter your email" 
            class="footer-subscribe-input"
            required
          />
          <button type="submit" id="subscribe-btn" class="footer-subscribe-btn">
            →
          </button>
        </form>
        <div id="subscribe-status" class="footer-subscribe-status hidden"></div>
        
        <p class="footer-privacy-text">
          by submitting this form, you acknowledge that you have the<br />
          terms of our <a href="/privacy" class="footer-privacy-link">Privacy Statement</a>
        </p>
      </div>
    </div>

    <!-- Bottom: Legal -->
    <div class="footer-bottom">
      <div class="footer-legal">
        <a href="/impressum" class="footer-legal-link">Impressum</a>
        <span class="footer-legal-separator">•</span>
        <a href="/privacy" class="footer-legal-link">Privacy Policy</a>
      </div>
      <p class="footer-copyright">
        © {new Date().getFullYear()} Unides. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background: linear-gradient(135deg, #0A353A 0%, #0D4A52 50%, #0A353A 100%);
    color: white;
    padding: 3rem 0 2rem;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-logo {
    margin-bottom: 2.5rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-nav-link {
    font-family: 'DM Sans', sans-serif;
    font-size: 1rem;
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
    width: fit-content;
  }

  .footer-nav-link:hover {
    color: #D9FD12;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid white;
    border-radius: 50%;
    color: white;
    transition: all 0.2s ease;
  }

  .footer-social-link:hover {
    background-color: white;
    color: #0A353A;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer-subscribe-title {
    font-family: 'DM Sans', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    line-height: 1.3;
    margin: 0;
  }

  .footer-subscribe-form {
    display: flex;
    gap: 0;
    max-width: 350px;
  }

  .footer-subscribe-input {
    flex: 1;
    padding: 0.75rem 1rem;
    background-color: transparent;
    border: 1px solid white;
    border-right: none;
    color: white;
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem;
  }

  .footer-subscribe-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-subscribe-input:focus {
    outline: none !important;
    border-color: white !important;
    box-shadow: 0 0 0 2px white !important;
    background-color: transparent !important;
    color: white !important;
  }

  .footer-subscribe-input:hover {
    border-color: white !important;
    background-color: transparent !important;
    color: white !important;
  }

  .footer-subscribe-btn {
    padding: 0.75rem 1.25rem;
    background-color: transparent;
    border: 1px solid white;
    color: white;
    font-size: 1.25rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .footer-subscribe-btn:hover {
    background-color: white;
    border-color: white;
    color: #0A353A;
  }

  .footer-privacy-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.5;
    margin: 0;
  }

  .footer-privacy-link {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: underline;
  }

  .footer-privacy-link:hover {
    color: white;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-legal {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .footer-legal-link {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-legal-link:hover {
    color: white;
  }

  .footer-legal-separator {
    color: rgba(255, 255, 255, 0.4);
  }

  .footer-copyright {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  .footer-subscribe-status {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  .footer-subscribe-status.success {
    color: #D9FD12;
  }

  .footer-subscribe-status.error {
    color: #F26522;
  }

  .footer-subscribe-status.hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-subscribe-title {
      font-size: 1.25rem;
    }
  }
</style>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
<script type="text/javascript">
  (function() {
    // Initialize EmailJS with your public key
    emailjs.init({
      publicKey: "HAJhQWntEy40S-xyj",
    });
  })();

  document.addEventListener('DOMContentLoaded', function() {
    const subscribeForm = document.getElementById('subscribe-form');
    
    if (subscribeForm) {
      subscribeForm.addEventListener('submit', function(event) {
        event.preventDefault();
        
        const emailInput = document.getElementById('subscribe-email');
        const submitBtn = document.getElementById('subscribe-btn');
        const statusDiv = document.getElementById('subscribe-status');
        const originalText = submitBtn?.textContent;
        
        // Show loading state
        if (submitBtn) {
          submitBtn.textContent = '...';
          submitBtn.disabled = true;
        }
        
        // Hide previous status
        if (statusDiv) {
          statusDiv.classList.add('hidden');
          statusDiv.classList.remove('success', 'error');
        }
        
        // Send using EmailJS
        emailjs.send('service_hm56mmb', 'template_i1utqhf', {
          email: emailInput.value
        })
        .then(() => {
          // Show success
          if (statusDiv) {
            statusDiv.textContent = "You're in! Welcome to the crew.";
            statusDiv.classList.remove('hidden');
            statusDiv.classList.add('success');
          }
          // Reset form
          subscribeForm.reset();
        })
        .catch((error) => {
          console.error('Subscribe failed:', error);
          // Show error
          if (statusDiv) {
            statusDiv.textContent = 'Oops, something went wrong. Try again!';
            statusDiv.classList.remove('hidden');
            statusDiv.classList.add('error');
          }
        })
        .finally(() => {
          // Reset button
          if (submitBtn) {
            submitBtn.textContent = originalText;
            submitBtn.disabled = false;
          }
        });
      });
    }
  });
</script>
