---
// Talent Modal Component - Responsive Drawer Design (Updated Layout)
---

<!-- Fullscreen Photo Lightbox -->
<div id="photo-lightbox" class="fixed inset-0 z-[100] hidden bg-white" aria-hidden="true" role="dialog" aria-label="Photo viewer">
  <!-- Close Button -->
  <button
    id="lightbox-close"
    type="button"
    class="absolute top-6 right-6 z-10 text-black hover:text-gray-600 transition-colors"
    aria-label="Close photo viewer"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Previous Button -->
  <button
    id="lightbox-prev"
    type="button"
    class="absolute left-6 top-1/2 -translate-y-1/2 z-10 text-black hover:text-gray-600 transition-colors p-2"
    aria-label="Previous photo"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7" />
    </svg>
  </button>

  <!-- Next Button -->
  <button
    id="lightbox-next"
    type="button"
    class="absolute right-6 top-1/2 -translate-y-1/2 z-10 text-black hover:text-gray-600 transition-colors p-2"
    aria-label="Next photo"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
    </svg>
  </button>

  <!-- Photo Container -->
  <div class="w-full h-full flex items-center justify-center p-16">
    <img
      id="lightbox-image"
      src=""
      alt=""
      class="max-w-full max-h-full object-contain"
    />
  </div>
</div>

<!-- Talent Modal HTML - Responsive Drawer Design -->
<div id="talent-modal" class="modal hidden fixed inset-0 z-50 bg-black bg-opacity-60 backdrop-blur-sm" aria-hidden="true" role="dialog" aria-labelledby="talent-modal-title" aria-describedby="talent-modal-description">
  
  <!-- Mobile: Bottom Drawer -->
  <div class="fixed inset-x-0 bottom-0 transform translate-y-full transition-transform duration-300 ease-out mobile-drawer" id="talent-modal-mobile">
    <div class="bg-white rounded-t-2xl h-[90vh] overflow-y-auto shadow-2xl relative" role="document">
      <!-- Close Button - Top Right -->
      <button
        id="close-talent-modal-mobile"
        type="button"
        class="absolute top-4 right-4 z-10 text-gray-400 hover:text-gray-600 transition-all duration-300"
        aria-label="Close talent profile modal"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <div class="p-6 pt-12">
        <!-- Mobile Content -->
        <div class="space-y-6">
          <!-- Name and Pronouns -->
          <div>
            <h3 id="talent-modal-name-mobile" class="text-3xl font-bold text-black tracking-tight"></h3>
            <p id="talent-modal-pronouns-mobile" class="text-gray-600 text-sm mt-1"></p>
          </div>

          <!-- Main Image -->
          <div class="bg-gray-100 flex items-center justify-center overflow-hidden relative group main-image-container">
            <img
              id="talent-modal-main-image-mobile"
              src=""
              alt=""
              class="max-w-full w-auto h-auto object-contain hidden cursor-pointer"
              loading="lazy"
            />
            <span id="talent-modal-main-image-placeholder-mobile" class="text-gray-400 text-sm p-20">Photo Coming Soon</span>
            <!-- Photo counter overlay -->
            <div id="photo-counter-mobile" class="absolute bottom-4 right-4 bg-black/60 text-white text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity hidden">
              1/1
            </div>
          </div>

          <!-- Physical Stats -->
          <div class="space-y-1.5 text-sm">
            <div id="talent-modal-stats-mobile">
              <!-- Stats will be populated by JavaScript -->
            </div>
          </div>

          <!-- Divider before Sedcard -->
          <hr class="border-gray-200" />

          <!-- Sedcard Button -->
          <div class="flex items-center gap-2">
            <button id="sedcard-btn-mobile" class="hidden flex items-center gap-2 border border-black rounded-sm px-3 py-1.5 hover:bg-gray-50 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              <span class="text-sm">Sedcard</span>
            </button>
          </div>

          <!-- Location -->
          <div id="talent-modal-booking-mobile" class="mt-2 hidden">
            <h4 class="font-bold text-sm text-black">Location</h4>
            <p id="talent-modal-booking-value-mobile" class="text-sm text-gray-700 mt-1"></p>
          </div>

          <!-- Sports/Activities -->
          <div id="talent-modal-sports-section-mobile" class="hidden">
            <h4 class="font-bold text-sm text-black">Sportler:in</h4>
            <p id="talent-modal-sports-mobile" class="text-sm text-gray-700 mt-1"></p>
          </div>

          <!-- Special Features -->
          <div id="talent-modal-features-section-mobile" class="hidden">
            <h4 class="font-bold text-sm text-black">Special Features</h4>
            <p id="talent-modal-features-mobile" class="text-sm text-gray-700 mt-1"></p>
          </div>

          <!-- Photo Gallery -->
          <div id="talent-thumbnail-gallery-mobile" class="grid grid-cols-2 gap-2 hidden">
            <!-- Thumbnails will be populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Desktop: Right Side Drawer -->
  <div class="fixed inset-y-0 right-0 w-[90%] md:w-[85%] lg:w-[80%] xl:w-[75%] max-w-6xl transform translate-x-full transition-transform duration-300 ease-out desktop-drawer" id="talent-modal-desktop">
    <div class="bg-white w-full h-full overflow-y-auto shadow-2xl relative" role="document">
      <!-- Close Button - Top Right -->
      <button
        id="close-talent-modal-desktop"
        type="button"
        class="absolute top-4 right-4 md:top-6 md:right-6 z-10 text-gray-400 hover:text-gray-600 transition-all duration-300"
        aria-label="Close talent profile modal"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <div class="p-6 md:p-8 lg:p-10">
        <!-- Top Section: Info + Main Photo side by side -->
        <div class="flex flex-row gap-8 lg:gap-12">
          <!-- Left Column: Info -->
          <div class="w-[220px] md:w-[260px] lg:w-[300px] flex-shrink-0 flex flex-col">
            <!-- Name -->
            <h3 id="talent-modal-name-desktop" class="text-3xl md:text-4xl font-bold text-black tracking-tight leading-tight"></h3>
            
            <!-- Pronouns -->
            <p id="talent-modal-pronouns-desktop" class="text-gray-600 text-sm mt-1"></p>
            
            <!-- Physical Stats -->
            <div class="mt-4 space-y-1" id="talent-modal-stats-desktop">
              <!-- Stats will be populated by JavaScript -->
            </div>

            <!-- Action Buttons Row -->
            <div class="mt-5 flex flex-wrap items-center gap-2">
              <!-- Sedcard Button -->
              <button id="sedcard-btn-desktop" class="hidden inline-flex items-center gap-1.5 border border-black rounded-sm px-3 py-1.5 hover:bg-gray-50 transition-colors text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
                <span>Sedcard</span>
              </button>
            </div>

            <!-- Divider -->
            <hr class="border-gray-300 my-5" />

            <!-- Location -->
            <div id="talent-modal-booking-desktop" class="hidden">
              <h4 class="font-bold text-sm text-black">Location</h4>
              <p id="talent-modal-booking-value-desktop" class="text-sm text-gray-700 mt-1"></p>
            </div>

            <!-- Sports/Activities -->
            <div id="talent-modal-sports-section-desktop" class="mt-4 hidden">
              <h4 class="font-bold text-sm text-black">Sportler:in</h4>
              <p id="talent-modal-sports-desktop" class="text-sm text-gray-700 mt-1 leading-relaxed"></p>
            </div>

            <!-- Special Features -->
            <div id="talent-modal-features-section-desktop" class="mt-4 hidden">
              <h4 class="font-bold text-sm text-black">Features and Skills</h4>
              <p id="talent-modal-features-desktop" class="text-sm text-gray-700 mt-1"></p>
            </div>
          </div>

          <!-- Right Column: Main Image -->
          <div class="flex-1 min-w-0">
            <div class="bg-gray-100 flex items-center justify-center overflow-hidden relative group main-image-container aspect-[3/4] max-h-[70vh]">
              <img
                id="talent-modal-main-image-desktop"
                src=""
                alt=""
                class="w-full h-full object-cover hidden cursor-pointer"
                loading="lazy"
              />
              <span id="talent-modal-main-image-placeholder-desktop" class="text-gray-400 text-sm p-20">Photo Coming Soon</span>
              <!-- Photo counter overlay -->
              <div id="photo-counter-desktop" class="absolute bottom-4 right-4 bg-black/60 text-white text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity hidden">
                1/1
              </div>
            </div>
          </div>
        </div>

        <!-- Photo Gallery - Full width below -->
        <div id="talent-thumbnail-gallery-desktop" class="grid grid-cols-4 gap-3 mt-6 hidden">
          <!-- Thumbnails will be populated by JavaScript -->
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize talent modal component
  console.log('Talent modal component script running...');
  
  // Always initialize to ensure it works
  console.log('Initializing talent modal');

    // Lightbox state
    var lightboxPhotos = [];
    var lightboxCurrentIndex = 0;

    // Lightbox functions
    function openLightbox(photos, startIndex) {
      lightboxPhotos = photos;
      lightboxCurrentIndex = startIndex || 0;
      
      var lightbox = document.getElementById('photo-lightbox');
      var lightboxImage = document.getElementById('lightbox-image');
      
      if (lightbox && lightboxImage) {
        lightboxImage.src = lightboxPhotos[lightboxCurrentIndex];
        lightboxImage.alt = 'Photo ' + (lightboxCurrentIndex + 1) + ' of ' + lightboxPhotos.length;
        lightbox.classList.remove('hidden');
        lightbox.setAttribute('aria-hidden', 'false');
        
        // Update button visibility
        updateLightboxNav();
      }
    }

    function closeLightbox() {
      var lightbox = document.getElementById('photo-lightbox');
      if (lightbox) {
        lightbox.classList.add('hidden');
        lightbox.setAttribute('aria-hidden', 'true');
      }
    }

    function lightboxPrev() {
      if (lightboxCurrentIndex > 0) {
        lightboxCurrentIndex--;
        updateLightboxImage();
      }
    }

    function lightboxNext() {
      if (lightboxCurrentIndex < lightboxPhotos.length - 1) {
        lightboxCurrentIndex++;
        updateLightboxImage();
      }
    }

    function updateLightboxImage() {
      var lightboxImage = document.getElementById('lightbox-image');
      if (lightboxImage && lightboxPhotos[lightboxCurrentIndex]) {
        lightboxImage.src = lightboxPhotos[lightboxCurrentIndex];
        lightboxImage.alt = 'Photo ' + (lightboxCurrentIndex + 1) + ' of ' + lightboxPhotos.length;
      }
      updateLightboxNav();
    }

    function updateLightboxNav() {
      var prevBtn = document.getElementById('lightbox-prev');
      var nextBtn = document.getElementById('lightbox-next');
      
      if (prevBtn) {
        prevBtn.style.opacity = lightboxCurrentIndex === 0 ? '0.3' : '1';
        prevBtn.style.pointerEvents = lightboxCurrentIndex === 0 ? 'none' : 'auto';
      }
      if (nextBtn) {
        nextBtn.style.opacity = lightboxCurrentIndex === lightboxPhotos.length - 1 ? '0.3' : '1';
        nextBtn.style.pointerEvents = lightboxCurrentIndex === lightboxPhotos.length - 1 ? 'none' : 'auto';
      }
    }

    // Make lightbox functions globally available
    window.openLightbox = openLightbox;
    window.closeLightbox = closeLightbox;
    window.lightboxPrev = lightboxPrev;
    window.lightboxNext = lightboxNext;
    
    // Get talents data from the main page
    function getTalentsData() {
      const talentsDataElement = document.getElementById('talents-data');
      console.log('Talents data element:', talentsDataElement);
      const dataText = talentsDataElement ? talentsDataElement.textContent : '[]';
      console.log('Talents data text:', dataText);
      try {
        const parsedData = JSON.parse(dataText);
        console.log('Parsed talents data:', parsedData);
        return parsedData;
      } catch (error) {
        console.error('Error parsing talents data:', error);
        return [];
      }
    }

    // Helper function to populate content for both mobile and desktop
    function populateModalContent(talent, isMobile = false) {
      const suffix = isMobile ? '-mobile' : '-desktop';
      
      // Get elements
      const modalName = document.getElementById(`talent-modal-name${suffix}`);
      const modalPronouns = document.getElementById(`talent-modal-pronouns${suffix}`);
      const modalStats = document.getElementById(`talent-modal-stats${suffix}`);
      const modalMainImage = document.getElementById(`talent-modal-main-image${suffix}`);
      const modalMainImagePlaceholder = document.getElementById(`talent-modal-main-image-placeholder${suffix}`);
      const thumbnailGallery = document.getElementById(`talent-thumbnail-gallery${suffix}`);
      const sedcardBtn = document.getElementById(`sedcard-btn${suffix}`);
      
      // Location elements
      const bookingSection = document.getElementById(`talent-modal-booking${suffix}`);
      const bookingValue = document.getElementById(`talent-modal-booking-value${suffix}`);
      
      // Sports elements
      const sportsSection = document.getElementById(`talent-modal-sports-section${suffix}`);
      const sportsValue = document.getElementById(`talent-modal-sports${suffix}`);
      
      // Features elements
      const featuresSection = document.getElementById(`talent-modal-features-section${suffix}`);
      const featuresValue = document.getElementById(`talent-modal-features${suffix}`);

      if (!modalName) {
        console.error(`Modal name element missing for ${suffix}!`);
        return;
      }

      // Populate name
      modalName.textContent = talent.name || '';
      
      // Populate pronouns
      if (modalPronouns) {
        modalPronouns.textContent = talent.pronouns || '';
      }

      // Populate physical stats in vertical format
      if (modalStats) {
        modalStats.innerHTML = '';
        const statsFields = [
          { label: 'Height', value: talent.height },
          { label: 'Hair', value: talent.hairColor },
          { label: 'Eyes', value: talent.eyeColor },
          { label: 'Shoes', value: talent.shoeSize },
          { label: 'Clothing size', value: talent.clothingSize || talent.dressSize },
          { label: 'Age', value: talent.age }
        ];

        statsFields.forEach(field => {
          if (field.value) {
            const statDiv = document.createElement('div');
            statDiv.className = 'text-sm';
            statDiv.innerHTML = `<span class="text-black font-medium">${field.label}</span> <span class="text-gray-600">${field.value}</span>`;
            modalStats.appendChild(statDiv);
          }
        });
      }

      // Populate Location
      if (bookingSection && bookingValue) {
        if (talent.bookingBase || talent.location) {
          bookingSection.classList.remove('hidden');
          bookingValue.textContent = talent.bookingBase || talent.location;
        } else {
          bookingSection.classList.add('hidden');
        }
      }

      // Populate sports
      if (sportsSection && sportsValue) {
        if (talent.sports && Array.isArray(talent.sports) && talent.sports.length > 0) {
          sportsSection.classList.remove('hidden');
          sportsValue.textContent = talent.sports.join(', ');
        } else {
          sportsSection.classList.add('hidden');
        }
      }

      // Populate special features
      if (featuresSection && featuresValue) {
        if (talent.specialFeatures && Array.isArray(talent.specialFeatures) && talent.specialFeatures.length > 0) {
          featuresSection.classList.remove('hidden');
          featuresValue.textContent = talent.specialFeatures.join(', ');
        } else {
          featuresSection.classList.add('hidden');
        }
      }

      // Set up sedcard button - only show if portfolioUrl or pdfUrl exists
      if (sedcardBtn) {
        const sedcardUrl = talent.portfolioUrl || talent.pdfUrl;
        if (sedcardUrl) {
          sedcardBtn.classList.remove('hidden');
          sedcardBtn.onclick = function() {
            // Create a temporary link to trigger download
            const link = document.createElement('a');
            link.href = sedcardUrl;
            link.download = (talent.name || 'sedcard') + '_sedcard.pdf';
            link.target = '_blank';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
          };
        } else {
          sedcardBtn.classList.add('hidden');
        }
      }

      // Helper function to check if URL is a YouTube video
      function isYouTubeUrl(url) {
        return typeof url === 'string' && /(youtube\.com|youtu\.be)\//.test(url);
      }

      // Helper function to check if URL is a SoundCloud link
      function isSoundCloudUrl(url) {
        return typeof url === 'string' && /soundcloud\.com\//.test(url);
      }

      // Helper function to extract YouTube video ID
      function getYouTubeVideoId(url) {
        const patterns = [
          /[?&]v=([\w-]{11})/,
          /youtu\.be\/([\w-]{11})/,
          /youtube\.com\/embed\/([\w-]{11})/,
          /youtube\.com\/shorts\/([\w-]{11})/,
          /youtube\.com\/live\/([\w-]{11})/,
          /youtube\.com\/v\/([\w-]{11})/
        ];
        for (const pattern of patterns) {
          const match = url.match(pattern);
          if (match) return match[1];
        }
        return null;
      }

      // Handle media (images + videos)
      var allMedia = [];
      if (talent.images && Array.isArray(talent.images) && talent.images.length > 0) {
        allMedia = talent.images.filter(function(item) { return item && item.trim() !== ""; });
      } else if (talent.imgs && Array.isArray(talent.imgs) && talent.imgs.length > 0) {
        allMedia = talent.imgs.filter(function(item) { return item && item.trim() !== ""; });
      } else if (talent.image && talent.image.trim() !== "") {
        allMedia = [talent.image];
      }

      // Separate images from videos for lightbox (only images go to lightbox)
      var photos = allMedia.filter(function(item) { return !isYouTubeUrl(item) && !isSoundCloudUrl(item); });

      let specialtyText = '';
      if (Array.isArray(talent.specialties)) {
        specialtyText = talent.specialties.join(' - ');
      } else if (talent.specialties) {
        specialtyText = talent.specialties;
      } else if (talent.specialty) {
        specialtyText = talent.specialty;
      }

      // Current media index for main display
      var currentMediaIndex = 0;

      // Function to update main media display
      function updateMainMedia(index) {
        currentMediaIndex = index;
        const media = allMedia[index];
        
        // Remove any existing video iframe
        const existingVideo = document.getElementById(`talent-modal-video${suffix}`);
        if (existingVideo && existingVideo.parentNode) {
          existingVideo.parentNode.removeChild(existingVideo);
        }

        if (isYouTubeUrl(media)) {
          // Show YouTube video
          const videoId = getYouTubeVideoId(media);
          if (videoId) {
            modalMainImage.classList.add('hidden');
            modalMainImagePlaceholder.classList.add('hidden');
            
            const iframe = document.createElement('iframe');
            iframe.id = `talent-modal-video${suffix}`;
            iframe.className = 'w-full h-full absolute inset-0';
            iframe.src = `https://www.youtube.com/embed/${videoId}?rel=0&showinfo=0`;
            iframe.title = 'YouTube video player';
            iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share');
            iframe.setAttribute('allowfullscreen', '');
            iframe.style.border = 'none';
            
            modalMainImage.parentNode.appendChild(iframe);
          }
        } else if (isSoundCloudUrl(media)) {
          // Show SoundCloud embed
          modalMainImage.classList.add('hidden');
          modalMainImagePlaceholder.classList.add('hidden');
          
          const iframe = document.createElement('iframe');
          iframe.id = `talent-modal-video${suffix}`;
          iframe.className = 'w-full h-full absolute inset-0';
          iframe.src = `https://w.soundcloud.com/player/?url=${encodeURIComponent(media)}&color=%23ff5500&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=false&visual=true`;
          iframe.title = 'SoundCloud player';
          iframe.setAttribute('allow', 'autoplay');
          iframe.style.border = 'none';
          
          modalMainImage.parentNode.appendChild(iframe);
        } else {
          // Show image
          modalMainImage.src = media;
          modalMainImage.alt = `${talent.name} - ${specialtyText}`;
          modalMainImage.classList.remove('hidden');
          modalMainImagePlaceholder.classList.add('hidden');
          
          // Make main image clickable to open lightbox (only for images)
          modalMainImage.style.cursor = 'pointer';
          modalMainImage.onclick = function() {
            const photoIndex = photos.indexOf(media);
            if (photoIndex >= 0) {
              openLightbox(photos, photoIndex);
            }
          };
        }

        // Update photo counter
        const photoCounter = document.getElementById(`photo-counter${suffix}`);
        if (photoCounter && allMedia.length > 1) {
          photoCounter.textContent = `${index + 1}/${allMedia.length}`;
          photoCounter.classList.remove('hidden');
        }
      }

      if (allMedia.length > 0 && modalMainImage && modalMainImagePlaceholder) {
        // Display first media item
        updateMainMedia(0);
        
        // Show thumbnails if there are multiple media items
        if (allMedia.length > 1 && thumbnailGallery) {
          thumbnailGallery.classList.remove('hidden');
          thumbnailGallery.innerHTML = '';
          
          allMedia.forEach(function(media, index) {
            var thumbnailDiv = document.createElement('div');
            thumbnailDiv.className = 'aspect-[3/4] bg-gray-100 overflow-hidden cursor-pointer transition-all duration-200 focus:outline-none relative group';
            thumbnailDiv.tabIndex = 0;
            thumbnailDiv.setAttribute('role', 'button');
            thumbnailDiv.setAttribute('aria-label', 'View media ' + (index + 1) + ' of ' + allMedia.length);
            
            if (isYouTubeUrl(media)) {
              // Show YouTube thumbnail with play icon
              const videoId = getYouTubeVideoId(media);
              if (videoId) {
                thumbnailDiv.innerHTML = `
                  <div class="relative w-full h-full">
                    <img src="https://img.youtube.com/vi/${videoId}/hqdefault.jpg" alt="Video thumbnail" class="w-full h-full object-cover" loading="lazy" />
                    <div class="absolute inset-0 flex items-center justify-center bg-black/30">
                      <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                  </div>
                `;
              } else {
                thumbnailDiv.innerHTML = `<div class="w-full h-full flex items-center justify-center bg-gray-200"><span class="text-xs text-gray-500">Video</span></div>`;
              }
            } else if (isSoundCloudUrl(media)) {
              // Show SoundCloud placeholder with audio icon
              thumbnailDiv.innerHTML = `
                <div class="relative w-full h-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center">
                  <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
                  </svg>
                </div>
              `;
            } else {
              // Show image thumbnail
              thumbnailDiv.innerHTML = `
                <img src="${media}" alt="${talent.name} - Photo ${index + 1}" class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
                <div class="absolute bottom-2 right-2">
                  <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
