---
// Talent Modal Component - Responsive Drawer Design
---

<!-- Talent Modal HTML - Responsive Drawer Design -->
<div id="talent-modal" class="modal hidden fixed inset-0 z-50 bg-black bg-opacity-60 backdrop-blur-sm" aria-hidden="true" role="dialog" aria-labelledby="talent-modal-title" aria-describedby="talent-modal-description">
  
  <!-- Mobile: Bottom Drawer -->
  <div class="fixed inset-x-0 bottom-0 transform translate-y-full transition-transform duration-300 ease-out mobile-drawer" id="talent-modal-mobile">
    <div class="bg-default rounded-t-2xl h-[90vh] overflow-y-auto shadow-2xl" role="document">
      <div class="p-6">
        <!-- Header with Name and Close button -->
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 id="talent-modal-name-mobile" class="text-2xl font-bold text-default"></h3>
            <p id="talent-modal-specialty-mobile" class="text-primary font-medium text-lg"></p>
          </div>
          <button
            id="close-talent-modal-mobile"
            type="button"
            class="text-default/60 hover:text-primary hover:rotate-90 transition-all duration-300 text-2xl font-bold focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-full p-2 flex-shrink-0 ml-4"
            aria-label="Close talent profile modal"
          >
            ×
          </button>
        </div>

        <!-- Mobile Content -->
        <div class="space-y-6">

          <!-- Main Image -->
          <div class="aspect-[3/4] bg-default/20 rounded-lg flex items-center justify-center overflow-hidden">
            <img
              id="talent-modal-main-image-mobile"
              src=""
              alt=""
              class="w-full h-full object-cover rounded-lg hidden"
              loading="lazy"
            />
            <span id="talent-modal-main-image-placeholder-mobile" class="text-default/60 text-sm">Photo Coming Soon</span>
          </div>
          
          <!-- Thumbnail gallery -->
          <div id="talent-thumbnail-gallery-mobile" class="grid grid-cols-4 gap-2 hidden">
            <!-- Thumbnails will be populated by JavaScript -->
          </div>

          <!-- About Section -->
          <div>
            <h4 class="font-semibold mb-3 text-lg text-default">About</h4>
            <p id="talent-modal-about-mobile" class="text-default/80 leading-relaxed"></p>
          </div>

          <!-- Personal Details Section -->
          <div>
            <h4 class="font-semibold mb-3 text-lg text-default">Personal Details</h4>
            <div id="talent-modal-personal-mobile" class="grid grid-cols-2 gap-4 text-sm">
              <!-- Personal details will be populated by JavaScript -->
            </div>
          </div>

          <!-- Download Portfolio Button -->
          <div class="flex gap-4 pt-6 border-t border-default/20">
            <button id="download-portfolio-btn-mobile" class="flex-1 border-2 border-primary text-primary px-8 py-4 rounded-lg hover:bg-primary/10 hover:border-purple-600 hover:text-purple-600 focus:ring-2 focus:ring-purple-400 focus:outline-none transition-all duration-300 font-semibold text-lg hover:shadow-lg hover:-translate-y-1 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
              <span class="portfolio-text">Download Portfolio</span>
              <span class="portfolio-spinner hidden animate-spin ml-2">⏳</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Desktop: Right Side Drawer -->
  <div class="fixed inset-y-0 right-0 w-[56%] transform translate-x-full transition-transform duration-300 ease-out desktop-drawer" id="talent-modal-desktop">
    <div class="bg-default w-full h-full overflow-y-auto shadow-2xl" role="document">
      <div class="p-6">
        <!-- Header with close button -->
        <div class="flex justify-between items-start mb-6">
          <h2 class="text-2xl font-bold text-default bg-gradient-to-r from-purple-400 to-primary bg-clip-text text-transparent">Talent Profile</h2>
          <button
            id="close-talent-modal-desktop"
            type="button"
            class="text-default/60 hover:text-primary hover:rotate-90 transition-all duration-300 text-2xl font-bold focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-full p-2"
            aria-label="Close talent profile modal"
          >
            ×
          </button>
        </div>

        <!-- Desktop Content - Two Column Layout -->
        <div class="flex gap-8 h-full">
          <!-- Left Column: Image Gallery -->
          <div class="w-1/2 space-y-4">
            <!-- Main Image -->
            <div class="aspect-[3/4] bg-default/20 rounded-lg flex items-center justify-center overflow-hidden">
              <img
                id="talent-modal-main-image-desktop"
                src=""
                alt=""
                class="w-full h-full object-cover rounded-lg hidden"
                loading="lazy"
              />
              <span id="talent-modal-main-image-placeholder-desktop" class="text-default/60 text-sm">Photo Coming Soon</span>
            </div>
            
            <!-- Thumbnail gallery -->
            <div id="talent-thumbnail-gallery-desktop" class="grid grid-cols-4 gap-2 hidden">
              <!-- Thumbnails will be populated by JavaScript -->
            </div>
          </div>

          <!-- Right Column: Information -->
          <div class="w-1/2 space-y-6 overflow-y-auto">
            <!-- Name and Specialty -->
            <div>
              <h3 id="talent-modal-name-desktop" class="text-2xl font-bold text-default"></h3>
              <p id="talent-modal-specialty-desktop" class="text-primary font-medium text-lg"></p>
            </div>

            <!-- About Section -->
            <div>
              <h4 class="font-semibold mb-3 text-lg text-default">About</h4>
              <p id="talent-modal-about-desktop" class="text-default/80 leading-relaxed"></p>
            </div>

            <!-- Personal Details Section -->
            <div>
              <h4 class="font-semibold mb-3 text-lg text-default">Personal Details</h4>
              <div id="talent-modal-personal-desktop" class="grid grid-cols-2 gap-4 text-sm">
                <!-- Personal details will be populated by JavaScript -->
              </div>
            </div>

            <!-- Download Portfolio Button -->
            <div class="pt-6 border-t border-default/20">
              <button id="download-portfolio-btn-desktop" class="w-full border-2 border-primary text-primary px-6 py-3 rounded-lg hover:bg-primary/10 hover:border-purple-600 hover:text-purple-600 focus:ring-2 focus:ring-purple-400 focus:outline-none transition-all duration-300 font-semibold hover:shadow-lg hover:-translate-y-1 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                <span class="portfolio-text">Download Portfolio</span>
                <span class="portfolio-spinner hidden animate-spin ml-2">⏳</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize talent modal component
  console.log('Talent modal component script running...');
  
  // Always initialize to ensure it works
  console.log('Initializing talent modal');
    
    // Get talents data from the main page
    function getTalentsData() {
      const talentsDataElement = document.getElementById('talents-data');
      console.log('Talents data element:', talentsDataElement);
      const dataText = talentsDataElement ? talentsDataElement.textContent : '[]';
      console.log('Talents data text:', dataText);
      try {
        const parsedData = JSON.parse(dataText);
        console.log('Parsed talents data:', parsedData);
        return parsedData;
      } catch (error) {
        console.error('Error parsing talents data:', error);
        return [];
      }
    }

    // Helper function to populate content for both mobile and desktop
    function populateModalContent(talent, isMobile = false) {
      const suffix = isMobile ? '-mobile' : '-desktop';
      
      // Get elements
      const modalName = document.getElementById(`talent-modal-name${suffix}`);
      const modalSpecialty = document.getElementById(`talent-modal-specialty${suffix}`);
      const modalDescription = document.getElementById(`talent-modal-about${suffix}`);
      const modalMainImage = document.getElementById(`talent-modal-main-image${suffix}`);
      const modalMainImagePlaceholder = document.getElementById(`talent-modal-main-image-placeholder${suffix}`);
      const modalPersonal = document.getElementById(`talent-modal-personal${suffix}`);
      const thumbnailGallery = document.getElementById(`talent-thumbnail-gallery${suffix}`);
      const downloadBtn = document.getElementById(`download-portfolio-btn${suffix}`);

      if (!modalName || !modalSpecialty || !modalDescription || !modalPersonal) {
        console.error(`Some modal elements are missing for ${suffix}!`);
        return;
      }

      // Populate basic info
      modalName.textContent = talent.name || '';
      
      let specialtyText = '';
      if (Array.isArray(talent.specialties)) {
        specialtyText = talent.specialties.join(' - ');
      } else if (talent.specialties) {
        specialtyText = talent.specialties;
      } else if (talent.specialty) {
        specialtyText = talent.specialty;
      }
      modalSpecialty.textContent = specialtyText;
      modalDescription.textContent = talent.description || '';

      // Populate personal details
      modalPersonal.innerHTML = '';
      const personalFields = [
        { key: 'location', label: 'Location', value: talent.location },
        { key: 'birth', label: 'Birth', value: talent.birth || talent.born },
        { key: 'height', label: 'Height', value: talent.height ? talent.height + 'cm' : null },
        { key: 'eyeColor', label: 'Eye Color', value: talent.eyeColor },
        { key: 'hairColor', label: 'Hair Color', value: talent.hairColor },
        { key: 'shoeSize', label: 'Shoe Size', value: talent.shoeSize },
        { key: 'dressSize', label: 'Dress Size', value: talent.dressSize }
      ];

      personalFields.forEach(field => {
        if (field.value) {
          const fieldDiv = document.createElement('div');
          if (isMobile) {
            fieldDiv.className = 'min-w-0';
            fieldDiv.innerHTML = `
              <span class="text-sm text-default/60 block">${field.label}</span>
              <span class="text-default font-medium block">${field.value}</span>
            `;
          } else {
            fieldDiv.className = 'min-w-0';
            fieldDiv.innerHTML = `
              <span class="text-sm text-default/60 block">${field.label}</span>
              <span class="text-default font-medium block">${field.value}</span>
            `;
          }
          modalPersonal.appendChild(fieldDiv);
        }
      });

      // Handle images
      var photos = [];
      if (talent.images && Array.isArray(talent.images) && talent.images.length > 0) {
        photos = talent.images.filter(function(img) { return img && img.trim() !== ""; });
      } else if (talent.imgs && Array.isArray(talent.imgs) && talent.imgs.length > 0) {
        photos = talent.imgs.filter(function(img) { return img && img.trim() !== ""; });
      } else if (talent.image && talent.image.trim() !== "") {
        photos = [talent.image];
      }

      if (photos.length > 0 && modalMainImage && modalMainImagePlaceholder) {
        modalMainImage.src = photos[0];
        modalMainImage.alt = `${talent.name} - ${specialtyText}`;
        modalMainImage.classList.remove('hidden');
        modalMainImagePlaceholder.classList.add('hidden');
        
        // Show thumbnails if there are multiple photos
        if (photos.length > 1 && thumbnailGallery) {
          thumbnailGallery.classList.remove('hidden');
          thumbnailGallery.innerHTML = '';
          
          photos.forEach(function(photo, index) {
            var thumbnailDiv = document.createElement('div');
            thumbnailDiv.className = 'aspect-square bg-default/20 rounded overflow-hidden cursor-pointer hover:opacity-80 hover:ring-2 hover:ring-primary transition-all duration-200 focus:ring-2 focus:ring-primary focus:outline-none';
            thumbnailDiv.tabIndex = 0;
            thumbnailDiv.setAttribute('role', 'button');
            thumbnailDiv.setAttribute('aria-label', 'View photo ' + (index + 1) + ' of ' + photos.length);
            thumbnailDiv.innerHTML = '<img src="' + photo + '" alt="' + talent.name + ' - Photo ' + (index + 1) + '" class="w-full h-full object-cover" loading="lazy" />';
            
            var handleImageClick = function() {
              modalMainImage.src = photo;
              modalMainImage.alt = talent.name + ' - Photo ' + (index + 1);
              
              // Update active thumbnail styling
              var thumbs = thumbnailGallery.querySelectorAll('div');
              for (var j = 0; j < thumbs.length; j++) {
                thumbs[j].classList.remove('ring-2', 'ring-primary');
              }
              thumbnailDiv.classList.add('ring-2', 'ring-primary');
            };
            
            thumbnailDiv.addEventListener('click', handleImageClick);
            thumbnailDiv.addEventListener('keydown', function(e) {
              if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                handleImageClick();
              }
            });
            
            thumbnailGallery.appendChild(thumbnailDiv);
          });
          
          // Mark first thumbnail as active
          if (thumbnailGallery.firstChild) {
            thumbnailGallery.firstChild.classList.add('ring-2', 'ring-primary');
          }
        } else if (thumbnailGallery) {
          thumbnailGallery.classList.add('hidden');
        }
      } else if (modalMainImage && modalMainImagePlaceholder) {
        modalMainImage.classList.add('hidden');
        modalMainImagePlaceholder.classList.remove('hidden');
        if (thumbnailGallery) {
          thumbnailGallery.classList.add('hidden');
        }
      }

      // Set up download portfolio button
      if (downloadBtn) {
        downloadBtn.onclick = function() {
          if (talent.portfolioUrl || talent.pdfUrl) {
            var url = talent.portfolioUrl || talent.pdfUrl;
            window.open(url, '_blank');
          } else {
            console.log('No portfolio URL available for this talent');
            alert('Portfolio not available for this talent');
          }
        };
        
        // Update button state based on portfolio availability
        if (talent.portfolioUrl || talent.pdfUrl) {
          downloadBtn.disabled = false;
          downloadBtn.style.opacity = '1';
        } else {
          downloadBtn.disabled = true;
          downloadBtn.style.opacity = '0.5';
        }
      }
    }

    // Main modal open function - updated for drawer design
    function openTalentModal(id, name, specialties, description, image, location, birth, age, height, eyeColor, hairColor, shoeSize, dressSize, imgs, portfolioUrl) {    
      console.log('Opening talent modal for:', id);

      var modal = document.getElementById('talent-modal');
      var mobileDrawer = document.getElementById('talent-modal-mobile');
      var desktopDrawer = document.getElementById('talent-modal-desktop');
      
      if (!modal || !mobileDrawer || !desktopDrawer) {
        console.error('Modal elements are missing!');
        return;
      }

      // Find the talent data from the talents array
      const talentsData = getTalentsData();
      var talent = null;
      for (var i = 0; i < talentsData.length; i++) {
        if (String(talentsData[i].id) === String(id)) {
          talent = talentsData[i];
          break;
        }
      }

      if (!talent) {
        talent = {
          id: id,
          name: name,
          specialties: specialties ? specialties.split(', ') : [],
          specialty: specialties,
          description: description,
          image: image,
          location: location,
          birth: birth,
          height: height,
          eyeColor: eyeColor,
          hairColor: hairColor,
          shoeSize: shoeSize,
          dressSize: dressSize,
          imgs: imgs,
          portfolioUrl: portfolioUrl
        };
      }

      console.log('Talent data being used:', talent);

      // Populate content for both mobile and desktop
      populateModalContent(talent, true);  // Mobile
      populateModalContent(talent, false); // Desktop

      // Show modal with animation
      modal.classList.remove('hidden');
      modal.setAttribute('aria-hidden', 'false');
      modal.dataset.currentTalentId = id;
      document.body.style.overflow = 'hidden';
      
      // Animate drawers
      setTimeout(function() {
        mobileDrawer.classList.remove('translate-y-full');
        desktopDrawer.classList.remove('translate-x-full');
      }, 10);
    }

    // Close modal function - updated for drawer design
    function closeTalentModal() {
      var modal = document.getElementById('talent-modal');
      var mobileDrawer = document.getElementById('talent-modal-mobile');
      var desktopDrawer = document.getElementById('talent-modal-desktop');
      
      // Animate drawers out
      mobileDrawer.classList.add('translate-y-full');
      desktopDrawer.classList.add('translate-x-full');
      
      // Delay hiding the modal to allow animation to complete
      setTimeout(function() {
        modal.classList.add('hidden');
        modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = 'auto';
      }, 300);
    }

    // Make functions globally available
    window.openTalentModal = openTalentModal;
    window.closeTalentModal = closeTalentModal;
    
    // Debug: Confirm functions are assigned
    console.log('Modal functions assigned to window:', {
      openTalentModal: typeof window.openTalentModal,
      closeTalentModal: typeof window.closeTalentModal
    });
    
    // Test modal elements exist
    console.log('Modal elements check:', {
      modal: !!document.getElementById('talent-modal'),
      mobileDrawer: !!document.getElementById('talent-modal-mobile'),
      desktopDrawer: !!document.getElementById('talent-modal-desktop')
    });
    
    // Add test function to window for debugging
    window.testModal = function() {
      console.log('Testing modal...');
      openTalentModal('test', 'Test Name', 'Test Specialty', 'Test description', '', 'Berlin', '1990', '30', '180', 'brown', 'black', '42', '38', [], '');
    };

    // Set up event listeners
    document.addEventListener('DOMContentLoaded', function() {
      // Close buttons
      var closeBtnMobile = document.getElementById('close-talent-modal-mobile');
      var closeBtnDesktop = document.getElementById('close-talent-modal-desktop');
      
      if (closeBtnMobile) {
        closeBtnMobile.addEventListener('click', closeTalentModal);
      }
      if (closeBtnDesktop) {
        closeBtnDesktop.addEventListener('click', closeTalentModal);
      }

      // Close modal when clicking outside (on backdrop)
      var talentModal = document.getElementById('talent-modal');
      if (talentModal) {
        talentModal.addEventListener('click', function(e) {
          if (e.target.id === 'talent-modal') {
            closeTalentModal();
          }
        });
      }

      // Keyboard navigation
      document.addEventListener('keydown', function(e) {
        const modal = document.getElementById('talent-modal');
        if (!modal || modal.classList.contains('hidden')) {
          return;
        }

        if (e.key === 'Escape') {
          e.preventDefault();
          closeTalentModal();
        }
      });
    });
</script>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  .modal button:focus,
  .modal [tabindex]:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  
  .modal[aria-hidden="false"] {
    display: block !important;
  }
  
  .modal[aria-hidden="true"] {
    display: none !important;
  }

  #talent-modal {
    transition-duration: 0.3s;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Mobile bottom drawer styles */
  #talent-modal-mobile {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Desktop left drawer styles */
  #talent-modal-desktop {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Smooth scrolling for drawer content */
  #talent-modal-mobile > div,
  #talent-modal-desktop > div {
    scroll-behavior: smooth;
  }

  /* Responsive visibility for drawers */
  .mobile-drawer {
    display: block;
  }
  
  .desktop-drawer {
    display: none;
  }

  @media (min-width: 768px) {
    .mobile-drawer {
      display: none;
    }
    
    .desktop-drawer {
      display: block;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #talent-modal,
    #talent-modal-mobile,
    #talent-modal-desktop {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      transition-delay: 0s !important;
    }
  }
</style>