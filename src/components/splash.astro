---
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";
---

<section class="relative overflow-hidden bg-[#B794F6] pb-12">
  <div class="relative grid place-items-center px-4 pt-32 pb-8">
    <div class="text-center flex flex-col items-center gap-0 -space-y-2 md:-space-y-4">
      <!-- Logo -->
      <div class="hero-logo">
        <Image src="/unides_agency_green.png" alt="Unides Agency" class="w-auto h-80 md:h-[30rem] lg:h-[40rem]" width={800} height={400}/>
      </div>
      
      <!-- Tagline -->
      <div class="hero-tagline-container">
        <p class="hero-tagline">
          we represent <span class="hero-highlight">talents</span> that inspire
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-logo {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease-out forwards 0.2s;
  }
  
  .hero-tagline-container {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease-out forwards 0.5s;
  }
  
  .hero-tagline {
    font-family: 'Jaro', sans-serif;
    font-weight: normal;
    font-size: clamp(2rem, 6vw, 3.5rem);
    letter-spacing: 0.02em;
    color: #FFFFFF;
    text-align: center;
    text-transform: lowercase;
  }
  
  .hero-highlight {
    color: #D9FD12;
    font-family: 'Jaro', sans-serif;
    font-weight: normal;
    position: relative;
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-logo,
    .hero-tagline-container {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
