---
import { Icon } from "astro-icon/components";
import ThemeSwitcher from "~/components/theme-switcher.astro";
import type { NavItem } from "~/types";

const navItems: Array<NavItem> = [
  { title: "Talents", url: "#talents" },
  { title: "Creatives", url: "#creatives" },
  { title: "About Us", url: "#aboutus" },
  { title: "Contact Us", url: "#contact" },
];
---

<header
  id="page-header"
  class="absolute bottom-0 z-20 flex w-full items-center justify-between border-b border-transparent px-8 py-4 bg-default/10 backdrop-blur-sm"
>
  <a class="flex items-center gap-3 hover:!text-default" href="#">
    <h1 class="sr-only">Unides</h1>
    <img src="/unides_yellow.png" alt="Unides Logo" class="h-8 w-auto" />
  </a>
  <div class="flex-grow flex justify-center">
    <nav class="hidden sm:block lg:block">
      <ul class="flex items-center gap-8 lg:gap-6 xl:gap-8">
        {
          navItems.map(({ title, url }) => (
            <li>
              <a class="text-base font-medium nav-link lg:text-sm xl:text-base" href={url}>
                {title}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
  <div>
    <div class="flex items-center gap-6">
      <button
        id="open-nav-button"
        type="button"
        class="btn block sm:hidden md:hidden"
        aria-label="Navigation"
      >
        <Icon name="mdi:menu" class="size-8" />
      </button>
      <ThemeSwitcher />
    </div>
    <div id="menu-modal" class="modal hidden" aria-hidden="true">
      <div class="fixed inset-0 bg-default px-8 py-4 text-default">
        <div class="space-y-4" role="dialog" aria-modal="true">
          <header class="text-right">
            <button
              id="close-nav-button"
              type="button"
              class="btn"
              aria-label="Close navigation"
            >
              <Icon name="mdi:close" class="size-8" />
            </button>
          </header>
          <nav>
            <ul class="flex flex-col">
              {
                navItems.map(({ title, url }) => (
                  <li>
                    <a class="block py-4 text-center text-xl font-medium mobile-nav-link" href={url}>
                      {title}
                    </a>
                  </li>
                ))
              }
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import MicroModal from "micromodal";
  import invariant from "tiny-invariant";

  const menuModalId = "menu-modal";

  const header = document.querySelector("#page-header") as HTMLElement;
  const page = document.documentElement;
  const menu = document.querySelector(`#${menuModalId} ul`);
  const openNavButton = document.querySelector("#open-nav-button");
  const closeNavButton = document.querySelector("#close-nav-button");

  invariant(header, "header should not be null");
  invariant(menu, "menu should not be null");
  invariant(openNavButton, "openNavButton should not be null");
  invariant(closeNavButton, "closeNavButton should not be null");

  const openMenu = () => {
    MicroModal.show(menuModalId, { disableScroll: true });
  };

  const closeMenu = () => {
    MicroModal.close(menuModalId);
  };

  openNavButton.addEventListener("click", openMenu);
  closeNavButton.addEventListener("click", closeMenu);

  document.addEventListener("scroll", () => {
    const d = page.clientHeight - page.scrollTop - header.offsetHeight;
    header.classList.toggle("fixed-header", d < 0);
  });

  menu.addEventListener("click", (event) => {
    if ((event.target as HTMLElement).tagName === "A") {
      closeMenu();
    }
  });
</script>

<noscript>
  <style>
    #open-nav-button {
      display: none;
    }
  </style>
</noscript>

<style>
  .fixed-header {
    @apply fixed bottom-auto top-0;
    @apply border-default bg-default text-default;
  }
  .modal.is-open {
    @apply block;
  }
  
  /* Ensure header is visible */
  #page-header {
    min-height: 64px;
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  
  /* Ensure navigation is visible */
  #page-header nav {
    display: block !important;
    visibility: visible !important;
  }
  
  #page-header nav ul {
    display: flex !important;
    visibility: visible !important;
  }
  
  .nav-link {
    position: relative;
    padding: 0.5rem 1rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    transition: all 0.2s ease;
    border-radius: 6px;
    background: transparent !important;
    box-shadow: none;
    color: inherit !important;
    display: inline-block;
    text-decoration: none;
  }
  
  .nav-link:hover {
    color: #fd5d13;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
    background: transparent !important;
    transform: translateY(-1px);
    box-shadow: none;
    font-weight: 700;
  }
  
  .nav-link:focus {
    outline: 2px solid #fd5d13;
    outline-offset: 2px;
    color: #fd5d13;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
    background: rgba(253, 93, 19, 0.1);
    font-weight: 700;
  }
  
  .nav-link:active {
    transform: translateY(0);
    color: #e84d0f;
  }
  
  .nav-link::before {
    display: none;
  }
  
  .nav-link::after {
    display: none;
  }
  
  .mobile-nav-link {
    transition: all 0.3s ease;
    font-weight: 500;
    text-decoration: none;
  }
  
  .mobile-nav-link:hover {
    color: var(--color-accent);
    transform: scale(1.05) translateY(-2px);
    text-shadow: 0 0 10px rgba(217, 253, 18, 0.5);
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
    font-weight: 600;
  }
  
  .mobile-nav-link:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
    color: var(--color-accent);
    transform: scale(1.05);
    text-shadow: 0 0 10px rgba(217, 253, 18, 0.5);
    background: rgba(217, 253, 18, 0.1);
    border-radius: 8px;
  }
  
  .mobile-nav-link:active {
    transform: scale(1.02);
    color: var(--color-accent);
  }
  
  /* Enhanced button hover states */
  #open-nav-button {
    transition: all 0.2s ease;
    padding: 0.5rem;
    border-radius: 8px;
  }
  
  #open-nav-button:hover {
    transform: scale(1.1);
    opacity: 0.8;
    background: rgba(253, 93, 19, 0.1);
  }
  
  #open-nav-button:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    transform: scale(1.1);
  }
  
  #close-nav-button {
    transition: all 0.2s ease;
    padding: 0.5rem;
    border-radius: 8px;
  }
  
  #close-nav-button:hover {
    transform: scale(1.1) rotate(90deg);
    opacity: 0.8;
    color: var(--color-accent);
    background: rgba(217, 253, 18, 0.1);
  }
  
  #close-nav-button:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    transform: scale(1.1);
    color: var(--color-accent);
  }
  
  /* Mobile navigation enhancements */
  .modal {
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  
  .modal .fixed {
    animation: slideIn 0.3s ease-out;
  }
  
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive navigation breakpoints */
  @media (max-width: 640px) {
    #page-header {
      padding: 0.75rem 1rem;
    }
    
    #page-header nav {
      display: none !important;
    }
    
    #open-nav-button {
      display: block !important;
    }
  }
  
  @media (min-width: 641px) {
    #page-header nav {
      display: block !important;
    }
    
    #open-nav-button {
      display: none !important;
    }
  }
  
  /* Handle medium screens where nav might be tight */
  @media (min-width: 641px) and (max-width: 800px) {
    .nav-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.9rem;
    }
    
    #page-header nav ul {
      gap: 1.5rem;
    }
  }
</style>
