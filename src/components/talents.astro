                  <span class="portfolio-spinner hidden animate-spin ml-2">‚è≥</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Fix nested conditional that causes Rollup build error
  const talentsDataElement = document.getElementById('talents-data');
  const talentsData = JSON.parse(talentsDataElement ? talentsDataElement.textContent : '[]');

  function openTalentModal(id, name, specialties, description, image) {
    // Show loading state
    var button = null;
    if (window.event && window.event.target) {
      button = window.event.target.closest('button');
    }
    
    if (button) {
      button.disabled = true;
      var loadingText = button.querySelector('.loading-text');
      var loadingSpinner = button.querySelector('.loading-spinner');
      var arrowIcon = button.querySelector('.arrow-icon');
      
      if (loadingText) loadingText.textContent = 'Loading...';
      if (loadingSpinner) loadingSpinner.classList.remove('hidden');
      if (arrowIcon) arrowIcon.classList.add('hidden');
    }

    var modal = document.getElementById('talent-modal');
    var modalContent = document.getElementById('talent-modal-content');
    var modalTitle = document.getElementById('talent-modal-title');
    var modalName = document.getElementById('talent-modal-name');
    var modalSpecialty = document.getElementById('talent-modal-specialty');
    var modalDescription = document.getElementById('talent-modal-description');
    var modalMainImage = document.getElementById('talent-modal-main-image');
    var modalMainImagePlaceholder = document.getElementById('talent-modal-main-image-placeholder');
    var modalPersonal = document.getElementById('talent-modal-personal');
    var thumbnailGallery = document.getElementById('talent-thumbnail-gallery');

    // Find the talent data
    var talent = null;
    for (var i = 0; i < talentsData.length; i++) {
      if (talentsData[i].id === id) {
        talent = talentsData[i];
        break;
      }
    }
    
    if (!talent) {
      talent = {
        id: id,
        name: name,
        specialties: specialties ? specialties.split(', ') : [],
        description: description,
        image: image,
        imgs: image ? [image] : [],
        images: image ? [image] : []
      };
    }

    // Populate modal content
    modalTitle.textContent = `${name}`;
    
    // Fix nested conditional that causes Rollup build error
    let specialtyText = '';
    if (Array.isArray(talent.specialties)) {
      specialtyText = talent.specialties.join(' - ');
    } else if (talent.specialties) {
      specialtyText = talent.specialties;
    } else if (specialties) {
      specialtyText = specialties;
    }
    modalSpecialty.textContent = specialtyText;
    
    modalDescription.textContent = description;

    // Handle multiple images from Firebase
    var photos = [];
    
    // Check for multiple image sources
    if (talent.images && Array.isArray(talent.images) && talent.images.length > 0) {
      photos = talent.images.filter(function(img) { return img && img.trim() !== ""; });
    } else if (talent.imgs && Array.isArray(talent.imgs) && talent.imgs.length > 0) {
      photos = talent.imgs.filter(function(img) { return img && img.trim() !== ""; });
    } else if (talent.gallery && Array.isArray(talent.gallery) && talent.gallery.length > 0) {
      photos = talent.gallery.filter(function(img) { return img && img.trim() !== ""; });
    } else if (talent.image && talent.image.trim() !== "") {
      photos = [talent.image];
    }
    
    if (photos.length > 0) {
      // Show main image
      modalMainImage.src = photos[0];
      
      // Fix nested conditional that causes Rollup build error
      let altText = '';
      if (Array.isArray(talent.specialties)) {
        altText = talent.specialties.join(', ');
      } else if (talent.specialties) {
        altText = talent.specialties;
      } else if (specialties) {
        altText = specialties;
      }
      modalMainImage.alt = `${name} - ${altText}`;
      
      modalMainImage.classList.remove('hidden');
      modalMainImagePlaceholder.classList.add('hidden');
      
      // Show thumbnails if there are multiple photos
      if (photos.length > 1) {
        thumbnailGallery.classList.remove('hidden');
        thumbnailGallery.innerHTML = '';
        
        photos.forEach(function(photo, index) {
          var thumbnailDiv = document.createElement('div');
          thumbnailDiv.className = 'aspect-square bg-default/20 rounded overflow-hidden cursor-pointer hover:opacity-80 hover:ring-2 hover:ring-primary transition-all duration-200 focus:ring-2 focus:ring-primary focus:outline-none';
          thumbnailDiv.tabIndex = 0;
          thumbnailDiv.setAttribute('role', 'button');
          thumbnailDiv.setAttribute('aria-label', 'View photo ' + (index + 1) + ' of ' + photos.length);
          thumbnailDiv.setAttribute('aria-pressed', index === 0 ? 'true' : 'false');
          thumbnailDiv.innerHTML = '<img src="' + photo + '" alt="' + name + ' - Photo ' + (index + 1) + '" class="w-full h-full object-cover" loading="lazy" />';
          
          var handleImageClick = function() {
            modalMainImage.src = photo;
            modalMainImage.alt = name + ' - Photo ' + (index + 1);
            
            // Update active thumbnail styling and aria-pressed state
            var thumbs = thumbnailGallery.querySelectorAll('div');
            for (var j = 0; j < thumbs.length; j++) {
              thumbs[j].classList.remove('ring-2', 'ring-primary');
              thumbs[j].setAttribute('aria-pressed', 'false');
            }
            thumbnailDiv.classList.add('ring-2', 'ring-primary');
            thumbnailDiv.setAttribute('aria-pressed', 'true');
          };
          
          thumbnailDiv.addEventListener('click', handleImageClick);
          thumbnailDiv.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              handleImageClick();
            }
          });
          
          thumbnailGallery.appendChild(thumbnailDiv);
        });
        
        // Mark first thumbnail as active
        if (thumbnailGallery.firstChild) {
          thumbnailGallery.firstChild.classList.add('ring-2', 'ring-primary');
          thumbnailGallery.firstChild.setAttribute('aria-pressed', 'true');
        }
      } else {
        thumbnailGallery.classList.add('hidden');
      }
    } else {
      modalMainImage.classList.add('hidden');
      modalMainImagePlaceholder.classList.remove('hidden');
      thumbnailGallery.classList.add('hidden');
    }

    // Populate personal details
    modalPersonal.innerHTML = '';
    var personalFields = [
      { key: 'location', label: 'Location' },
      { key: 'born', label: 'Born' },
      { key: 'height', label: 'Height' },
      { key: 'eyeColor', label: 'Eye Color' },
      { key: 'hairColor', label: 'Hair Color' },
      { key: 'shoeSize', label: 'Shoe Size' },
      { key: 'dressSize', label: 'Dress Size' }
    ];

    personalFields.forEach(function(field) {
      if (talent[field.key]) {
        var detailDiv = document.createElement('div');
        detailDiv.className = 'flex justify-between p-2 bg-default/10 rounded';
        detailDiv.innerHTML = '<span class="text-default/60 font-medium">' + field.label + ':</span><span class="text-default font-semibold">' + talent[field.key] + '</span>';
        modalPersonal.appendChild(detailDiv);
      }
    });

    // Show modal with animation
    modal.classList.remove('hidden');
    modal.setAttribute('aria-hidden', 'false');
    modal.dataset.currentTalentId = id; // Store current talent ID
    document.body.style.overflow = 'hidden';
    
    // Set up modal button event listeners now that modal is visible
    setupModalButtonListeners();
    
    // Initialize focus trap
    initializeFocusTrap();
    
    // Animate modal content
    setTimeout(() => {
      if (modalContent) {
        modalContent.classList.remove('scale-95', 'opacity-0');
        modalContent.classList.add('scale-100', 'opacity-100');
      }
      
      // Reset button state
      if (button) {
        button.disabled = false;
        const loadingText = button.querySelector('.loading-text');
        const loadingSpinner = button.querySelector('.loading-spinner');
        const arrowIcon = button.querySelector('.arrow-icon');
        
        if (loadingText) loadingText.textContent = 'View Profile';
        if (loadingSpinner) loadingSpinner.classList.add('hidden');
        if (arrowIcon) arrowIcon.classList.remove('hidden');
      }
    }, 10);
  }

  function closeTalentModal() {
    var modal = document.getElementById('talent-modal');
    var modalContent = document.getElementById('talent-modal-content');
    
    // Destroy focus trap
    destroyFocusTrap();
    
    // Animate modal content out
    if (modalContent) {
      modalContent.classList.add('scale-95', 'opacity-0');
      modalContent.classList.remove('scale-100', 'opacity-100');
    }
    
    // Delay hiding the modal to allow animation to complete
    setTimeout(() => {
      modal.classList.add('hidden');
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = 'auto';
    }, 300);
  }

  // Event listeners
  var closeBtn = document.getElementById('close-talent-modal');
  if (closeBtn) {
    closeBtn.addEventListener('click', closeTalentModal);
  }

  // Function to set up modal button listeners (called when modal opens)
  function setupModalButtonListeners() {
    // Remove any existing listeners to prevent duplicates
    const existingPortfolioBtn = document.querySelector('#talent-modal .flex-1.border-2.border-primary');
    if (existingPortfolioBtn) {
      existingPortfolioBtn.replaceWith(existingPortfolioBtn.cloneNode(true));
    }

    
    // Download Portfolio button
    const portfolioBtn = document.querySelector('#talent-modal .flex-1.border-2.border-primary');
    if (portfolioBtn) {
      portfolioBtn.addEventListener('click', async (event) => {
        event.preventDefault();
        
        const textSpan = portfolioBtn.querySelector('.portfolio-text');
        const spinner = portfolioBtn.querySelector('.portfolio-spinner');
        
        if (textSpan && spinner) {
          portfolioBtn.disabled = true;
          textSpan.textContent = 'Loading Portfolio...';
          spinner.classList.remove('hidden');
          
          try {
            // Get current talent ID
            const modal = document.getElementById('talent-modal');
            const currentTalentId = modal ? modal.dataset.currentTalentId : null;
            
            if (!currentTalentId) {
              throw new Error('No talent ID found');
            }

            // Get PDF URL from Firebase
            const pdfUrl = await getTalentPdfUrl(currentTalentId);
            
            if (pdfUrl) {
              // Create a temporary link and trigger download
              const link = document.createElement('a');
              link.href = pdfUrl;
              link.download = ''; // Let the browser determine the filename from the URL
              link.target = '_blank'; // Open in new tab as fallback
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);
            } else {
              // Show user-friendly message
              alert('Portfolio PDF not available for this talent.');
            }
            
          } catch (error) {
            console.error('Error downloading portfolio:', error);
            alert('Unable to download portfolio. Please try again later.');
          } finally {
            portfolioBtn.disabled = false;
            textSpan.textContent = 'Download Portfolio';
            spinner.classList.add('hidden');
          }
        }
      });
    }
  }

  // Add loading states for modal buttons
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, page ready');
    
    // Set up view profile button event listeners
    var viewProfileBtns = document.querySelectorAll('.view-profile-btn');
    for (var i = 0; i < viewProfileBtns.length; i++) {
      viewProfileBtns[i].addEventListener('click', function(e) {
        e.preventDefault();
        var btn = e.currentTarget;
        var id = btn.getAttribute('data-talent-id');
        var name = btn.getAttribute('data-talent-name');
        var specialties = btn.getAttribute('data-talent-specialties');
        var description = btn.getAttribute('data-talent-description');
        var image = btn.getAttribute('data-talent-image');
        
        window.event = e; // Set global event for openTalentModal
        openTalentModal(id, name, specialties, description, image);
      });
    }
  });

  // Close modal when clicking outside
  var talentModal = document.getElementById('talent-modal');
  if (talentModal) {
    talentModal.addEventListener('click', function(e) {
      if (e.target.id === 'talent-modal') {
        closeTalentModal();
      }
    });
  }

  // Enhanced keyboard navigation with focus trap
  document.addEventListener('keydown', function(e) {
    const modal = document.getElementById('talent-modal');
    if (!modal || modal.classList.contains('hidden')) {
      return;
    }

    // Close modal with Escape key
    if (e.key === 'Escape') {
      e.preventDefault();
      closeTalentModal();
    }
  });

  // Make functions globally available
  window.openTalentModal = openTalentModal;
  window.closeTalentModal = closeTalentModal;

  // Function to get talent PDF URL from Firebase
  async function getTalentPdfUrl(talentId) {
    try {
      // Import Firebase functions dynamically
      const { doc, getDoc } = await import('firebase/firestore');
      const { db } = await import('~/lib/firebase');
      
      const talentRef = doc(db, 'talents', talentId);
      const talentDoc = await getDoc(talentRef);
      
      if (talentDoc.exists()) {
        const data = talentDoc.data();
        return data.pdfUrl || null;
      }
      
      return null;
    } catch (error) {
      console.error('Error fetching talent PDF URL:', error);
      throw error;
    }
  }

  // Focus trap functionality
  let focusableElements = [];
  let firstFocusableElement = null;
  let lastFocusableElement = null;
  let previouslyFocusedElement = null;

  function getFocusableElements(container) {
    const focusableSelectors = [
      'a[href]',
      'button:not([disabled])',
      'input:not([disabled])',
      'select:not([disabled])',
      'textarea:not([disabled])',
      '[tabindex]:not([tabindex="-1"])',
      '[contenteditable="true"]'
    ];
    
    return container.querySelectorAll(focusableSelectors.join(', '));
  }

  function trapFocus(event) {
    // Only trap focus if modal is open
    const modal = document.getElementById('talent-modal');
    if (!modal || modal.classList.contains('hidden')) {
      return;
    }

    // If Tab key is pressed
    if (event.key === 'Tab') {
      // If Shift + Tab (backwards)
      if (event.shiftKey) {
        if (document.activeElement === firstFocusableElement) {
          event.preventDefault();
          lastFocusableElement.focus();
        }
      } else {
        // If Tab (forwards)
        if (document.activeElement === lastFocusableElement) {
          event.preventDefault();
          firstFocusableElement.focus();
        }
      }
    }
  }

  function initializeFocusTrap() {
    const modal = document.getElementById('talent-modal');
    const modalContent = document.getElementById('talent-modal-content');
    
    if (!modal || !modalContent) return;

    // Store the previously focused element
    previouslyFocusedElement = document.activeElement;

    // Get all focusable elements within the modal
    focusableElements = getFocusableElements(modalContent);
    
    if (focusableElements.length > 0) {
      firstFocusableElement = focusableElements[0];
      lastFocusableElement = focusableElements[focusableElements.length - 1];
      
      // Focus the first focusable element (close button)
      firstFocusableElement.focus();
    }

    // Add event listener for focus trapping
    document.addEventListener('keydown', trapFocus);
  }

  function destroyFocusTrap() {
    // Remove event listener
    document.removeEventListener('keydown', trapFocus);
    
    // Restore focus to previously focused element
    if (previouslyFocusedElement) {
      previouslyFocusedElement.focus();
      previouslyFocusedElement = null;
    }
    
    // Clear focus trap variables
    focusableElements = [];
    firstFocusableElement = null;
    lastFocusableElement = null;
  }

  // Performance monitoring for Core Web Vitals
  const performanceObserver = {
    lcpObserver: null,
    clsObserver: null,
    tbtObserver: null,
    metrics: {
      lcp: 0,
      cls: 0,
      tbt: 0
    },

    init() {
      this.observeLCP();
      this.observeCLS();
      this.observeTBT();
    },

    observeLCP() {
      if (typeof PerformanceObserver === 'undefined') return;
      
      try {
        this.lcpObserver = new PerformanceObserver((list) => {
          const entries = list.getEntries();
          const lastEntry = entries[entries.length - 1];
          
          this.metrics.lcp = lastEntry.startTime;
          
          // Good: < 2.5s, Needs improvement: 2.5s - 4s, Poor: > 4s
          if (this.metrics.lcp > 2500) {
            console.warn(`LCP: ${this.metrics.lcp}ms - Consider optimizing image loading`);
            this.optimizeForLCP();
          }
        });
        
        this.lcpObserver.observe({ entryTypes: ['largest-contentful-paint'] });
      } catch (error) {
        console.warn('LCP observer not supported:', error);
      }
    },

    observeCLS() {
      if (typeof PerformanceObserver === 'undefined') return;
      
      try {
        this.clsObserver = new PerformanceObserver((list) => {
          let clsValue = 0;
          
          list.getEntries().forEach((entry) => {
            if (!entry.hadRecentInput) {
              clsValue += entry.value;
            }
          });
          
          this.metrics.cls += clsValue;
          
          // Good: < 0.1, Needs improvement: 0.1 - 0.25, Poor: > 0.25
          if (this.metrics.cls > 0.1) {
            console.warn(`CLS: ${this.metrics.cls} - Consider reducing layout shifts`);
            this.optimizeForCLS();
          }
        });
        
        this.clsObserver.observe({ entryTypes: ['layout-shift'] });
      } catch (error) {
        console.warn('CLS observer not supported:', error);
      }
    },

    observeTBT() {
      if (typeof PerformanceObserver === 'undefined') return;
      
      try {
        // TBT is calculated from long tasks
        this.tbtObserver = new PerformanceObserver((list) => {
          list.getEntries().forEach((entry) => {
            if (entry.duration > 50) {
              this.metrics.tbt += entry.duration - 50;
            }
          });
          
          // Good: < 200ms, Needs improvement: 200ms - 600ms, Poor: > 600ms
          if (this.metrics.tbt > 200) {
            console.warn(`TBT: ${this.metrics.tbt}ms - Consider deferring animations`);
            this.optimizeForTBT();
          }
        });
        
        this.tbtObserver.observe({ entryTypes: ['longtask'] });
      } catch (error) {
        console.warn('TBT observer not supported:', error);
      }
    },

    optimizeForLCP() {
      // Optimize images for better LCP
      const images = document.querySelectorAll('img[loading="lazy"]');
      images.forEach((img, index) => {
        if (index < 2) { // Make first 2 images load eagerly
          img.loading = 'eager';
          img.fetchPriority = 'high';
        }
      });
    },

    optimizeForCLS() {
      // Add explicit dimensions to prevent layout shifts
      const images = document.querySelectorAll('img:not([width]):not([height])');
      images.forEach((img) => {
        if (img.naturalWidth && img.naturalHeight) {
          img.setAttribute('width', img.naturalWidth);
          img.setAttribute('height', img.naturalHeight);
        }
      });
    },

    optimizeForTBT() {
      // Defer animations if TBT is high
      this.deferAnimations();
    },

    deferAnimations() {
      // Disable animations if performance is poor
      const style = document.createElement('style');
      style.textContent = `
        .defer-animations * {
          animation-duration: 0.01ms !important;
          animation-delay: 0s !important;
          transition-duration: 0.01ms !important;
          transition-delay: 0s !important;
        }
      `;
      document.head.appendChild(style);
      document.body.classList.add('defer-animations');
      
      console.log('Animations deferred due to poor performance');
    },

    getMetrics() {
      return {
        lcp: this.metrics.lcp,
        cls: this.metrics.cls,
        tbt: this.metrics.tbt,
        lcpRating: this.metrics.lcp < 2500 ? 'good' : this.metrics.lcp < 4000 ? 'needs-improvement' : 'poor',
        clsRating: this.metrics.cls < 0.1 ? 'good' : this.metrics.cls < 0.25 ? 'needs-improvement' : 'poor',
        tbtRating: this.metrics.tbt < 200 ? 'good' : this.metrics.tbt < 600 ? 'needs-improvement' : 'poor'
      };
    },

    disconnect() {
      if (this.lcpObserver) this.lcpObserver.disconnect();
      if (this.clsObserver) this.clsObserver.disconnect();
      if (this.tbtObserver) this.tbtObserver.disconnect();
    }
  };

  // Animation optimization based on user preferences and performance
  const animationManager = {
    prefersReducedMotion: false,
    performanceMode: 'auto', // 'auto', 'performance', 'quality'
    
    init() {
      this.checkUserPreferences();
      this.adaptToPerformance();
      this.optimizeModalAnimations();
    },

    checkUserPreferences() {
      this.prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      
      if (this.prefersReducedMotion) {
        this.disableAnimations();
      }
    },

    adaptToPerformance() {
      // Check device capabilities
      const connection = navigator.connection || navigator.mozConnection || navigator.webkitConnection;
      const isSlowConnection = connection && (connection.effectiveType === 'slow-2g' || connection.effectiveType === '2g');
      const isLowEndDevice = navigator.hardwareConcurrency && navigator.hardwareConcurrency < 4;
      
      if (isSlowConnection || isLowEndDevice) {
        this.performanceMode = 'performance';
        this.simplifyAnimations();
      }
    },

    optimizeModalAnimations() {
      const modal = document.getElementById('talent-modal');
      if (!modal) return;

      if (this.prefersReducedMotion || this.performanceMode === 'performance') {
        // Use simpler animations for better performance
        modal.style.setProperty('--animation-duration', '0.1s');
        modal.style.setProperty('--animation-easing', 'ease');
      } else {
        // Use full animations for better experience
        modal.style.setProperty('--animation-duration', '0.3s');
        modal.style.setProperty('--animation-easing', 'cubic-bezier(0.4, 0, 0.2, 1)');
      }
    },

    disableAnimations() {
      const style = document.createElement('style');
      style.textContent = `
        .talent-card,
        .view-profile-btn,
        #talent-modal,
        #talent-modal-content {
          animation: none !important;
          transition: none !important;
        }
        
        .talent-card:hover {
          transform: none !important;
        }
      `;
      document.head.appendChild(style);
    },

    simplifyAnimations() {
      const style = document.createElement('style');
      style.textContent = `
        .talent-card {
          transition-duration: 0.1s !important;
        }
        
        .talent-card:hover {
          transform: scale(1.01) !important;
        }
        
        #talent-modal-content {
          transition-duration: 0.1s !important;
        }
      `;
      document.head.appendChild(style);
    }
  };

  // Initialize performance monitoring and animation optimization
  if (typeof window !== 'undefined') {
    // Wait for page load to avoid impacting initial render
    window.addEventListener('load', () => {
      setTimeout(() => {
        performanceObserver.init();
        animationManager.init();
      }, 1000);
    });

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      performanceObserver.disconnect();
    });

    // Make performance metrics available globally for debugging
    window.getPerformanceMetrics = () => performanceObserver.getMetrics();
  }

  // Enhanced modal opening with performance considerations
  function openTalentModalOptimized(id, name, specialties, description, image) {
    // Check if we should defer animations
    const metrics = performanceObserver.getMetrics();
    const shouldDeferAnimations = metrics.tbt > 300 || metrics.cls > 0.15;
    
    if (shouldDeferAnimations) {
      // Open modal without complex animations
      const modal = document.getElementById('talent-modal');
      modal.style.setProperty('--animation-duration', '0.05s');
    }
    
    // Call original function
    openTalentModal(id, name, specialties, description, image);
  }

  // Replace the global function with optimized version
  window.openTalentModal = openTalentModalOptimized;
</script>

