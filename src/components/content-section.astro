---
export interface Props {
  id: string;
  title: string;
  sectionType?: string;
  style?: string;
}

const { title, id, sectionType, style } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-18 flex-col items-center gap-8 space-y-10"
  style={style}
>
  <div class="flex flex-col items-center gap-8">
    <slot name="eyebrow" />
    <div class="relative">
      <h2
        class="section-title text-center"
      >
        {title}
      </h2>
      {sectionType && (
        <div class={`title-rectangle ${sectionType}`}></div>
      )}
    </div>
  </div>
  <p class="w-full text-center font-extrabold text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
